{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.*.json, env.d.ts",
    "vite.config.*": "jsconfig*, vitest.config.*, cypress.config.*, playwright.config.*, uno.config.*, tailwind.config.*, postcss.config.*",
    "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .eslint*, eslint*, .prettier*, prettier*, .editorconfig"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  // "terminal.integrated.defaultProfile.windows": "conda_web",
  "terminal.integrated.profiles.windows": {
    "conda-web": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-NoExit", "-Command", "Start-Conda; conda activate web"]
    },
  }
}
